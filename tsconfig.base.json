{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@stop-game-next-atoms/*": ["apps/stop-game-next/components/atoms/*"],
      "@stop-game-next-molecules/*": [
        "apps/stop-game-next/components/molecules/*"
      ],
      "@stop-game-next-organisms/*": [
        "apps/stop-game-next/components/organisms/*"
      ],
      "@stop-game-next-layouts/*": ["apps/stop-game-next/layouts/*"],
      "@stop-game-next-lib/*": ["apps/stop-game-next/lib/*"],
      "@stop-game/data": ["libs/data/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
